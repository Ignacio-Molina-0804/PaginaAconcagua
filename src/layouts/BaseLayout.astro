---

import { useTranslations } from "../i18n/util";
import { languageList } from "../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);

const { title = t('page.title'),  description = t('page.description')} = Astro.props;

---

<!DOCTYPE html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Ignacio Molina" />
    <link rel="canonical" href="https://gastonmolinaguide.netlify.app" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://gastonmolinaguide.netlify.app"
    />
    <meta property="og:image" content="public/data/logos/GM_isotipo-negativo.webp" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="public/data/logos/GM_isotipo-negativo.webp" />

    <link rel="icon" type="image/webp" href="/data/logos/GM_isotipo-positivo-fondoTransparente1.webp" />
    <title>{title}</title>
  </head>

  <body>
    <!-- Slot para el header (barra de navegación) -->
    <slot name="header" />
    <!-- Contenido principal de la página -->
    <main><slot /></main>
    <!-- Slot para el footer -->
    <slot name="footer" />
  
    <!-- Scripts globales para animaciones y navbar -->
    <script>
      import "../../src/scripts/animaciones.js";
      import "../../src/scripts/navbar.js";
    </script>
  </body>
</html>