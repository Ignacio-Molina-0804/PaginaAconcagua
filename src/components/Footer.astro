---
// src/components/Footer.astro

// Importaciones
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "../i18n/util";
import { languageList } from "../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);

---
<!-- 
  Footer del sitio web.
  Incluye derechos de autor y enlaces a redes sociales.
-->
<footer class="bg-gray-900 text-white py-4">
  <div class="container mx-auto px-4 flex flex-col md:flex-row justify-between items-center">
    <!-- Texto de derechos de autor -->
    <p class="mb-4 md:mb-0">&copy; {t('footer.text')}</p>
    <!-- Enlaces a redes sociales -->
    <div class="flex space-x-4">
      <!-- Enlace a Facebook -->
      <a href="https://facebook.com" target="_blank" class="hover:opacity-80 transition-opacity">
        <img src="/data/facebook-logo.webp" alt="Facebook" class="w-8 h-8 filter brightness-0 invert" />
      </a>
      <!-- Enlace a Instagram -->
      <a href="https://instagram.com" target="_blank" class="hover:opacity-80 transition-opacity">
        <img src="/data/insta-logo.webp" alt="Instagram" class="w-8 h-8 filter brightness-0 invert" />
      </a>
    </div>
  </div>
</footer>