---
// src/components/Hero.astro
export interface Props {
  backgroundImage: string;
  title: string;
  subtitle?: string;
  blurIntensity?: 'sm' | 'md' | 'lg';
  opacity?: number; // 0-100
}

const { 
  backgroundImage, 
  title, 
  subtitle = '',
  blurIntensity = 'sm', 
  opacity = 40 
} = Astro.props;

// Mapeo de clases de blur
const blurClasses = {
  sm: 'backdrop-blur-sm',
  md: 'backdrop-blur-md',
  lg: 'backdrop-blur-lg'
};
---
<section 
  class="relative h-[90vh] flex items-center justify-center bg-cover bg-center bg-fixed"
  style={`background-image: url('${backgroundImage}')`}
>
  <!-- Usamos el mapa de blur y style para la opacidad -->
  <div 
    class={`text-center text-white px-10 py-12 rounded-lg border border-white/10 ${blurClasses[blurIntensity]}`}
    style={`background-color: rgb(0 0 0 / ${opacity}%)`}
  >
    <h1 class="text-4xl md:text-6xl font-bold mb-3 md:mb-4 tracking-wider">
      {title}
    </h1>
    {subtitle && (
      <p class="text-lg md:text-2xl font-medium">
        {subtitle}
      </p>
    )}
  </div>
  
  <div class="absolute bottom-0 left-0 right-0 h-1/3 bg-gradient-to-t from-black/50 to-transparent"></div>
</section>