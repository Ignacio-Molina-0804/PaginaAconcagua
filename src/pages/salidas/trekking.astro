---
import BaseLayout from "../../layouts/BaseLayout.astro";
import NavBar from "../../components/NavBar.astro";
import Hero from "../../components/Hero.astro";
import Footer from "../../components/Footer.astro";

import { useTranslations } from "../../i18n/util";
import { languageList } from "../../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);


// Título y descripción para SEO y encabezado de la página
const pageTitle = t('trekking.page.title');
const pageDescription = t('trekking.page.description');
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Barra de navegación superior -->
    <slot name="header"><NavBar /></slot>
    
    <!-- Sección Hero con imagen de fondo, título y subtítulo -->
    <Hero
      backgroundImage="/data/trekking-hero.webp"
      title={t('trekking.hero.title')}
      subtitle={t('trekking.hero.subtitle')}
      blurIntensity="md"  
      loading="eager" 
      opacity={20}
    />

    <main class="container mx-auto px-4 sm:px-6 py-6 sm:py-8 max-w-4xl">
      <!-- Sección de presentación de rutas -->
      <section class="mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4 sm:mb-6">{t('trekking.title')}</h2>
        
        <div class="grid md:grid-cols-2 gap-6 sm:gap-8">
          <!-- Columna: Características generales -->
          <div set:html={t('trekking.caracteristicas')}></div>
          
          <!-- Columna: Qué incluye la experiencia -->
          <div set:html={t('trekking.whichincludes')} class="mt-4 md:mt-0"></div> 
        </div>
      </section>

      <!-- Sección de próximas salidas -->
      <section class="mb-8 sm:mb-12">
        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 sm:mb-4">{t('trekking.nextdepartures')}</h3>
        <div class="space-y-3 sm:space-y-4">
          <!-- Salida 1 -->
          <div set:html={t('trekking.nextdepartures.departure1')}></div>
          <!-- Salida 2 -->
          <div set:html={t('trekking.nextdepartures.departure2')}></div>
          <!-- Salida 3 -->
          <div set:html={t('trekking.nextdepartures.departure3')}></div>
        </div>
      </section>

      <!-- Sección sobre la filosofía de la empresa -->
      <section class="bg-gray-50 p-4 sm:p-6 rounded-lg mb-6 sm:mb-8">
        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 sm:mb-4">{t('trekking.phylosophy')}</h3>
        <div set:html={t('trekking.phylosophy.description')}></div>
      </section>

      <!-- Sección de recomendaciones para los participantes -->
      <section>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 sm:mb-4">{t('trekking.recomendations')}</h3>
        <div class="grid md:grid-cols-2 gap-4 sm:gap-6">
          <!-- Columna: Equipo básico recomendado -->
          <div set:html={t('trekking.recomendations.basicequipment')}></div>
          <!-- Columna: Consejos de preparación física -->
          <div set:html={t('trekking.recomendations.physicalpreparation')}></div>
        </div>
      </section>
    </main>
    
    <!-- Footer del sitio -->
    <slot name="footer"><Footer /></slot>
</BaseLayout>