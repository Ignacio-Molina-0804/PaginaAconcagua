---
import BaseLayout from "../../layouts/BaseLayout.astro";
import NavBar from "../../components/NavBar.astro";
import Hero from "../../components/Hero.astro";
import Footer from "../../components/Footer.astro";

import { useTranslations } from "../../i18n/util";
import { languageList } from "../../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);

// Título y descripción para SEO y encabezado de la página
const pageTitle = t('aconcagua.page.title');
const pageDescription = t('aconcagua.page.description');
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Barra de navegación superior -->
    <slot name="header"><NavBar /></slot>
    
    <!-- Sección Hero con imagen de fondo, título y subtítulo -->
    <Hero
      backgroundImage="/data/aconcagua-argentina-1.webp"
      title={t('aconcagua.hero.title')}
      subtitle={t('aconcagua.hero.subtitle')}
      blurIntensity="md"  
      loading="eager" 
      opacity={20} 
    />

    <main class="container mx-auto px-4 sm:px-6 py-6 sm:py-8 max-w-4xl">
      <!-- Sección de introducción y detalles técnicos -->
      <section class="mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4 sm:mb-6">{t('aconcagua.title')}</h2>
        
        <div class="grid md:grid-cols-2 gap-6 sm:gap-8">
          <!-- Columna: Detalles técnicos de la expedición -->
          <div set:html={t('aconcagua.technicaldetails.info1')}></div>
          
          <!-- Columna: Qué incluye la expedición -->
          <div set:html={t('aconcagua.technicaldetails.info2')}></div>
        </div>
      </section>

      <!-- Sección de itinerario resumido -->
      <section class="mb-8 sm:mb-12">
        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 sm:mb-4">{t('aconcagua.itinerary.title')}</h3>
        <div set:html={t('aconcagua.itinerary.info')}></div>
      </section>

      <!-- Sección de razones para elegir la expedición -->
      <section class="bg-gray-50 p-4 sm:p-6 rounded-lg mb-6 sm:mb-8">
        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 sm:mb-4">{t('aconcagua.expedition.title')}</h3>
        <div set:html={t('aconcagua.expedition.info')}></div>
      </section>

      <!-- Sección de galería de imágenes de la ruta -->
      <section>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 sm:mb-4">{t('aconcagua.galery.title')}</h3>
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 sm:gap-4">
          <img src="/data/aconcagua-1.webp" alt={t('aconcagua.galery.image1')} class="rounded-lg h-32 sm:h-40 object-cover">
          <img src="/data/campamento-base-aconcagua.webp" alt={t('aconcagua.galery.image2')} class="rounded-lg h-32 sm:h-40 object-cover">
          <img src="/data/aconcagua-summit.webp" alt={t('aconcagua.galery.image3')} class="rounded-lg h-32 sm:h-40 object-cover">
        </div>
      </section>
    </main>
    
    <!-- Footer del sitio -->
    <slot name="footer"><Footer /></slot>
</BaseLayout>