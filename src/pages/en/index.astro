---
/* 
  Importación de componentes necesarios para construir la página principal.
  BaseLayout envuelve todo el contenido, Navbar y Footer son la cabecera y pie de página.
  Hero es la sección visual destacada.
*/
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navbar from "../../components/NavBar.astro";
import Hero from "../../components/Hero.astro";
import Footer from "../../components/Footer.astro";

import { useTranslations } from "../../i18n/util";
import { languageList } from "../../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);

---

<!-- BaseLayout define la estructura general de la página (head, body, etc.) -->
<BaseLayout title={t('home.page.title')} description={t('home.page.description')}>
  <!-- Slot para el encabezado: se coloca el componente Navbar -->
  <slot name="header"><Navbar /></slot>

  <!-- Sección principal destacada con imagen de fondo, título y subtítulo -->
  <Hero
    backgroundImage="/data/aconcagua_ejemplo.webp"
    title={t("home.hero.title")}
    subtitle={t("home.hero.subtitle")}
    blurIntensity="md"
    loading="eager"
    opacity={20}
  />

  <!-- Sección descriptiva "Sobre Nosotros" con texto explicando la propuesta -->
  <section
    class="py-12 sm:py-16 px-4 sm:px-6 text-center bg-white section-animada opacity-0 translate-y-10 transition-[opacity,transform] duration-800 ease-[cubic-bezier(0.23,1,0.32,1)]"
  >
    <h2
      class="text-3xl sm:text-4xl font-black text-gray-800 mb-3 tracking-wide"
    >
      {t("home.about.title")}
    </h2>
    <div
      class="w-24 sm:w-32 h-1 sm:h-1.5 bg-yellow-600 rounded mx-auto mb-6 sm:mb-8"
    >
    </div>
    <p class="max-w-3xl mx-auto text-base sm:text-lg leading-relaxed px-2">
      {t("home.about.subtitle.1")}
      <br /><br />
      {t("home.about.subtitle.2")}
      <br /><br />
      <strong class="font-semibold">{t("home.about.subtitle.3")}</strong>
    </p>
  </section>

  <!-- Sección "¿Quiénes somos?" con imagen y descripción de la experiencia del equipo -->
  <section
    class="max-w-6xl mx-auto py-8 sm:py-10 px-4 section-animada opacity-0 translate-y-10 transition-[opacity,transform] duration-800 ease-[cubic-bezier(0.23,1,0.32,1)]"
  >
    <div
      class="flex flex-col lg:flex-row items-center gap-6 sm:gap-8 md:gap-12 mb-1"
    >
      <!-- Imagen representativa del equipo en la montaña -->
      <div class="w-full lg:w-1/2">
        <img
          src="/data/ascenso-cerro-aconcagua-ruta-normal-640.webp"
          alt="Nuestro equipo en la montaña"
          class="w-full max-w-lg h-64 sm:h-72 md:h-80 object-cover rounded-lg sm:rounded-xl shadow-md sm:shadow-lg"
        />
      </div>
      <!-- Texto con información del equipo -->
      <div class="w-full lg:w-1/2 mt-6 lg:mt-0">
        <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-3 sm:mb-4">
          {t("home.whoweare.title")}
        </h3>
        <p class="text-base sm:text-lg leading-relaxed">
          {t("home.whoweare.subtitle.1")}
          <br /><br />
          {t("home.whoweare.subtitle.2")}
        </p>
      </div>
    </div>
  </section>

  <!-- Sección "Nuestra misión" con imagen y texto -->
  <section
    class="max-w-6xl mx-auto py-8 sm:py-10 px-4 section-animada opacity-0 translate-y-10 transition-[opacity,transform] duration-800 ease-[cubic-bezier(0.23,1,0.32,1)]"
  >
    <div
      class="flex flex-col lg:flex-row-reverse items-center gap-6 sm:gap-8 md:gap-12 mb-1"
    >
      <!-- Imagen alineada a la derecha -->
      <div class="w-full lg:w-1/2">
        <img
          src="/data/ascent-to-mount-aconcagua-472.webp"
          alt="Grupo en la cima"
          class="w-full max-w-lg h-64 sm:h-72 md:h-80 object-cover rounded-lg sm:rounded-xl shadow-md sm:shadow-lg"
        />
      </div>
      <!-- Misión de la empresa -->
      <div class="w-full lg:w-1/2 mt-6 lg:mt-0">
        <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-3 sm:mb-4">
          {t("home.ourmission.title")}
        </h3>
        <p class="text-base sm:text-lg leading-relaxed">
          {t("home.ourmission.subtitle1")}
          <br /><br />
          {t("home.ourmission.subtitle2")}
        </p>
      </div>
    </div>
  </section>

  <!-- Sección "¿Por qué elegirnos?" con imagen y lista de ventajas -->
  <section
    class="max-w-6xl mx-auto py-8 sm:py-10 px-4 section-animada opacity-0 translate-y-10 transition-[opacity,transform] duration-800 ease-[cubic-bezier(0.23,1,0.32,1)]"
  >
    <div
      class="flex flex-col lg:flex-row items-center gap-6 sm:gap-8 md:gap-12 mb-1"
    >
      <!-- Imagen de grupo haciendo trekking -->
      <div class="w-full lg:w-1/2">
        <img
          src="/data/imagenGrupoGente.webp"
          alt="Trekking en grupo"
          class="w-full max-w-lg h-64 sm:h-72 md:h-80 object-cover rounded-lg sm:rounded-xl shadow-md sm:shadow-lg"
        />
      </div>
      <!-- Lista con motivos para elegir la empresa -->
      <div class="w-full lg:w-1/2 mt-6 lg:mt-0">
        <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-3 sm:mb-4">
          {t("home.whyyouchoseus.title")}
        </h3>
        <ul class="space-y-2 sm:space-y-3 text-base sm:text-lg">
          <li class="flex items-start">
            <span class="mr-2">•</span>
            <span>{t("home.whyyouchoseus.subtitle1")}</span>
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            <span>{t("home.whyyouchoseus.subtitle2")}</span>
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            <span>{t("home.whyyouchoseus.subtitle3")}</span>
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            <span>{t("home.whyyouchoseus.subtitle4")}</span>
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            <span>{t("home.whyyouchoseus.subtitle5")}</span>
          </li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Sección de Testimonios -->
  <section
    class="py-12 sm:py-16 px-4 sm:px-6 bg-gray-50 section-animada opacity-0 translate-y-10 transition-[opacity,transform] duration-800 ease-[cubic-bezier(0.23,1,0.32,1)]"
  >
    <div class="max-w-6xl mx-auto">
      <h2
        class="text-3xl sm:text-4xl font-black text-gray-800 mb-3 tracking-wide text-center"
      >
        {t("home.testimony.title")}
      </h2>
      <div
        class="w-24 sm:w-32 h-1 sm:h-1.5 bg-yellow-600 rounded mx-auto mb-8 sm:mb-12"
      >
      </div>

      <!-- Contenedor de testimonios -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-10">
        <!-- Testimonio 1 -->
        <div
          class="flex items-start gap-4 sm:gap-6 p-4 sm:p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
        >
          <div class="flex-shrink-0">
            <img
              src="/data/testimonio-1.webp"
              alt="Cliente satisfecho"
              class="w-16 sm:w-20 h-16 sm:h-20 rounded-full object-cover border-2 border-yellow-500"
              width="80"
              height="80"
            />
          </div>
          <div>
            <blockquote class="text-gray-600 italic mb-2 sm:mb-3">
              {t("home.testimony.person1")}
            </blockquote>
            <p class="text-sm sm:text-base text-gray-700 font-medium">
              - María González
            </p>
          </div>
        </div>

        <!-- Testimonio 2 -->
        <div
          class="flex items-start gap-4 sm:gap-6 p-4 sm:p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
        >
          <div class="flex-shrink-0">
            <img
              src="/data/testimonio-2.webp"
              alt="Cliente satisfecho"
              class="w-16 sm:w-20 h-16 sm:h-20 rounded-full object-cover border-2 border-yellow-500"
              width="80"
              height="80"
            />
          </div>
          <div>
            <blockquote class="text-gray-600 italic mb-2 sm:mb-3">
              {t("home.testimony.person2")}
            </blockquote>
            <p class="text-sm sm:text-base text-gray-700 font-medium">
              - Laura Méndez
            </p>
          </div>
        </div>

        <!-- Testimonio 3 -->
        <div
          class="flex items-start gap-4 sm:gap-6 p-4 sm:p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
        >
          <div class="flex-shrink-0">
            <img
              src="/data/testimonio-3.webp"
              alt="Cliente satisfecho"
              class="w-16 sm:w-20 h-16 sm:h-20 rounded-full object-cover border-2 border-yellow-500"
              width="80"
              height="80"
            />
          </div>
          <div>
            <blockquote class="text-gray-600 italic mb-2 sm:mb-3">
              {t("home.testimony.person3")}
            </blockquote>
            <p class="text-sm sm:text-base text-gray-700 font-medium">
              - Carlos Rodríguez
            </p>
          </div>
        </div>

        <!-- Testimonio 4 -->
        <div
          class="flex items-start gap-4 sm:gap-6 p-4 sm:p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
        >
          <div class="flex-shrink-0">
            <img
              src="/data/testimonio-4.webp"
              alt="Cliente satisfecho"
              class="w-16 sm:w-20 h-16 sm:h-20 rounded-full object-cover border-2 border-yellow-500"
              width="80"
              height="80"
            />
          </div>
          <div>
            <blockquote class="text-gray-600 italic mb-2 sm:mb-3">
              {t("home.testimony.person3")}
            </blockquote>
            <p class="text-sm sm:text-base text-gray-700 font-medium">
              - Elena Benitez
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Slot para el pie de página -->
  <slot name="footer"><Footer /></slot>
</BaseLayout>
