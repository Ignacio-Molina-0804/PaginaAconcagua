---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navbar from "../../components/NavBar.astro";
import Hero from "../../components/Hero.astro";
import Footer from "../../components/Footer.astro";

import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "../../i18n/util";
import { languageList } from "../../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);

const pageTitle = t('thanks.page.title');
const pageDescription = t('thanks.page.description');
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Barra de navegación superior -->
  <slot name="header"><Navbar /></slot>

  <!-- Sección Hero con imagen de fondo y mensaje de éxito -->
  <Hero 
    backgroundImage="/data/consultas-fondo.webp"
    title={t('thanks.hero.title')}
    subtitle={t('thanks.hero.subtitle')}
    blurIntensity="md"
    loading="eager" 
    opacity={20}
  />

  <!-- Mensaje de agradecimiento y opciones para el usuario -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 py-12 md:py-16 text-center">
    <div class="bg-white rounded-xl md:rounded-2xl shadow-lg md:shadow-xl p-6 sm:p-8 md:p-10">
      <!-- Ícono de check de éxito -->
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      
      <!-- Título de confirmación -->
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4">{t('thanks.title')}</h2>
      
      <!-- Mensaje informativo y enlaces útiles -->
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
        {t('thanks.subtitle1')}
        <a class="text-yellow-600 hover:text-yellow-700 font-medium">{t('thanks.subtitle2')}</a> {t('thanks.subtitle3')} 
        <a class="text-yellow-600 hover:text-yellow-700 font-medium">{t('thanks.subtitle4')}</a> {t('thanks.subtitle5')}
      </p>
      
      <!-- Botones de acción para el usuario -->
      <div class="flex flex-col sm:flex-row justify-center gap-4 mt-8">
        <a 
          href={getRelativeLocaleUrl(currentLang, "/")} 
          class="px-6 py-3 bg-yellow-500 hover:bg-yellow-600 text-white font-medium rounded-lg shadow-sm transition-all duration-300 inline-flex items-center justify-center"
        >
          {t('thanks.backhome')}
        </a>
        <a 
          href={getRelativeLocaleUrl(currentLang, "/consultas")}  
          class="px-6 py-3 bg-white hover:bg-gray-50 text-gray-800 font-medium rounded-lg border border-gray-300 shadow-sm transition-all duration-300 inline-flex items-center justify-center"
        >
          {t('thanks.gotoqueries')}
        </a>
      </div>
    </div>
  </section>

  <!-- Footer del sitio -->
  <slot name="footer"><Footer /></slot>
</BaseLayout>