---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/NavBar.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";

const pageTitle = "Galería de Aventuras | Montañismo Gastón Molina";
const pageDescription = "Revive los momentos más épicos en la montaña. Explora nuestra galería de fotos y videos de expediciones, trekking y aventuras al aire libre. Inspírate con las imágenes de nuestros guías y participantes en acción.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <slot name="header"><Navbar /></slot>

  <Hero 
    backgroundImage="/data/galeria-hero.webp"
    title="Galería de Aventuras"
    subtitle="Revive los momentos más épicos en la montaña"
    blurIntensity="md"
    opacity={20}
  />

  <slot name="footer"><Footer /></slot>
</BaseLayout>
