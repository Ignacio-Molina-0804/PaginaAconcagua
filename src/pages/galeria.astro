---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/NavBar.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";

const pageTitle = "Galería de Aventuras | Montañismo Gastón Molina";
const pageDescription = "Revive los momentos más épicos en la montaña. Explora nuestra galería de fotos del Aconcagua y otras expediciones.";

const galleryImages = [
  { id: 1, src: "/data/aconcagua_ejemplo.webp", alt: "Vista panorámica del Aconcagua", date: "2023-11-15" },
  { id: 2, src: "/data/aconcagua-1.webp", alt: "Ascenso al Aconcagua", date: "2023-09-22" },
  { id: 3, src: "/data/aconcagua-argentina-1.webp", alt: "Aconcagua desde Argentina", date: "2023-10-05" },
  { id: 4, src: "/data/aconcagua-summit.webp", alt: "Cumbre del Aconcagua", date: "2023-08-17" },
  { id: 5, src: "/data/aconcugua.webp", alt: "Trekking en Aconcagua", date: "2023-07-30" },
  { id: 6, src: "/data/ascenso-cerro-aconcagua-ruta-normal-640.webp", alt: "Ruta normal de ascenso", date: "2023-06-12" },
  { id: 7, src: "/data/ascent-to-mount-aconcagua-472.webp", alt: "Ascenso en equipo", date: "2023-05-18" },
  { id: 8, src: "/data/campamento-base-aconcagua.webp", alt: "Campamento base del Aconcagua", date: "2023-04-22" },
  { id: 9, src: "/data/guia-lucia.webp", alt: "Guía Lucía en expedición", date: "2023-03-15" },
  { id: 10, src: "/data/guia-martin.webp", alt: "Guía Martín liderando grupo", date: "2023-02-08" },
  { id: 11, src: "/data/guia-principal.webp", alt: "Nuestro equipo de guías", date: "2023-01-20" },
  { id: 12, src: "/data/imagenGrupoGente.webp", alt: "Grupo de expedicionarios", date: "2022-12-05" },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <slot name="header"><Navbar /></slot>

  <Hero 
    backgroundImage="/data/galeria-hero.webp"
    title="Galería de Aventuras"
    subtitle="Expediciones al Aconcagua y otras montañas"
    blurIntensity="md"
    loading="eager" 
    opacity={20}
  />

  <main class="container mx-auto px-4 py-12">

    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-amber-600 to-amber-800">
          NUESTRAS AVENTURAS
        </span>
      </h2>
      <div class="w-24 h-1.5 bg-gradient-to-r from-amber-400 to-amber-600 mx-auto rounded-full"></div>
    </div>

    <div 
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-20"
      style="--stagger-delay: 100ms"
    >
      {galleryImages.map((image, index) => (
        <div 
          class="relative group overflow-hidden rounded-xl shadow-md hover:shadow-lg transition-all duration-300"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <img 
            src={image.src} 
            alt={image.alt}
            class="w-full h-72 object-cover transition-transform duration-500 group-hover:scale-105"
            loading="lazy"
            decoding="async"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent flex items-end p-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              <span class="inline-block px-3 py-1 bg-amber-600 text-white text-xs font-semibold rounded-full mb-2">
                {new Date(image.date).toLocaleDateString('es-ES', { month: 'short', day: 'numeric' })}
              </span>
              <p class="text-white font-bold text-lg">{image.alt}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="max-w-3xl mx-auto text-center px-4 pt-10 border-t border-gray-100 animate-fade-in">
      <h3 class="text-2xl font-bold text-gray-800 mb-6">Memorias del Aconcagua</h3>
      <p class="text-gray-600 text-lg leading-relaxed">
        Cada imagen es un testimonio de superación. El Aconcagua, con sus 6,962 metros, 
        nos exige lo mejor de nosotros mismos. Estas fotografías capturan esos instantes 
        donde el esfuerzo se transforma en gloria.
      </p>
      <a 
        href="/consultas" 
        class="mt-8 inline-block px-8 py-3 bg-amber-600 hover:bg-amber-700 text-white font-bold rounded-full transition-colors duration-300"
      >
        Vive tu propia aventura
      </a>
    </div>
  </main>

  <slot name="footer"><Footer /></slot>

  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
      animation: fadeIn 0.6s ease-out forwards;
    }
  </style>
</BaseLayout>