---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/NavBar.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";

// Datos para el select de tipos de consulta
const tiposConsulta = [
  "Expediciones",
  "Trekking",
  "Cursos de montañismo",
  "Equipamiento",
  "Grupos privados",
  "Otros"
];
---

<BaseLayout title="Consultas | Empresa de Montañismo">
  <slot name="header"><Navbar /></slot>

  <Hero 
    backgroundImage="/img/fondo.jpg"
    title="Contáctanos"
    subtitle="Tu aventura comienza con una consulta"
    blurIntensity="md"
    opacity={30}
  />

  <section class="max-w-6xl mx-auto px-4 py-12 md:py-16">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Formulario innovador -->
      <div class="bg-white rounded-2xl shadow-2xl p-6 md:p-8 relative overflow-hidden">
        <div class="absolute -top-10 -right-10 w-32 h-32 bg-yellow-500 rounded-full opacity-10"></div>
        <div class="absolute -bottom-10 -left-10 w-40 h-40 bg-blue-500 rounded-full opacity-10"></div>
        
        <h2 class="text-3xl font-bold text-gray-800 mb-2 relative z-10">Formulario de contacto</h2>
        <p class="text-gray-600 mb-6 relative z-10">Completa el formulario y te responderemos en menos de 24h</p>
        
        <form 
          id="contactForm"
          class="space-y-5 relative z-10"
          action="https://formsubmit.co/tuemail@gmail.com" 
          method="POST"
        >
          <input type="hidden" name="_captcha" value="false">
          <input type="hidden" name="_next" value="https://tudominio.com/gracias">
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
            <div>
              <label for="nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre*</label>
              <input 
                type="text" 
                id="nombre" 
                name="nombre" 
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all"
                placeholder="Tu nombre"
              >
            </div>
            <div>
              <label for="apellido" class="block text-sm font-medium text-gray-700 mb-1">Apellido</label>
              <input 
                type="text" 
                id="apellido" 
                name="apellido" 
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all"
                placeholder="Tu apellido"
              >
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email*</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all"
              placeholder="tucorreo@ejemplo.com"
            >
          </div>

          <div>
            <label for="consulta" class="block text-sm font-medium text-gray-700 mb-1">Tipo de consulta*</label>
            <select 
              id="consulta" 
              name="tipo_consulta" 
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all appearance-none bg-[url('data:image/svg+xml;base64,')] bg-no-repeat bg-[center_right_1rem]"
            >
              <option value="" disabled selected>Selecciona una opción</option>
              {tiposConsulta.map((tipo) => (
                <option value={tipo}>{tipo}</option>
              ))}
            </select>
          </div>

          <div>
            <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-1">Mensaje*</label>
            <textarea 
              id="mensaje" 
              name="mensaje" 
              rows="5"
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all"
              placeholder="Describe tu consulta o interés..."
            ></textarea>
          </div>

          <div class="flex items-center">
            <input 
              type="checkbox" 
              id="newsletter" 
              name="newsletter" 
              class="w-4 h-4 text-yellow-600 rounded focus:ring-yellow-500"
            >
            <label for="newsletter" class="ml-2 text-sm text-gray-700">Quiero recibir novedades y ofertas</label>
          </div>

          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-yellow-500 to-yellow-600 text-white font-bold py-3 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 flex items-center justify-center"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            Enviar consulta
          </button>
        </form>
      </div>

      <!-- Información de contacto -->
      <div class="space-y-8">
        <div class="bg-gray-50 rounded-2xl p-6 md:p-8 border border-gray-200">
          <h3 class="text-2xl font-bold text-gray-800 mb-4">Otras formas de contacto</h3>
          
          <div class="space-y-5">
            <div class="flex items-start">
              <div class="bg-yellow-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-600">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-800">Teléfono</h4>
                <p class="text-gray-600">+54 9 11 1234-5678</p>
                <p class="text-sm text-gray-500 mt-1">Lunes a Viernes de 9 a 18hs</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-800">Email</h4>
                <p class="text-gray-600">info@montañismo.com</p>
                <p class="text-sm text-gray-500 mt-1">Respondemos en menos de 24h</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-green-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-800">Oficina</h4>
                <p class="text-gray-600">Av. Montaña 1234, Mendoza</p>
                <p class="text-sm text-gray-500 mt-1">Con cita previa</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gray-900 rounded-2xl p-6 md:p-8 text-white">
          <h3 class="text-2xl font-bold mb-4">¿Por qué contactarnos?</h3>
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-400 mr-2 mt-0.5 flex-shrink-0">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Asesoramiento personalizado según tus objetivos</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-400 mr-2 mt-0.5 flex-shrink-0">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Información sobre equipamiento necesario</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-400 mr-2 mt-0.5 flex-shrink-0">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Detalles sobre próximas expediciones</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-400 mr-2 mt-0.5 flex-shrink-0">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Respuestas a todas tus dudas sobre montañismo</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <slot name="footer"><Footer /></slot>

  <script type="module" src="../scripts/consultas-form.js"></script>
</BaseLayout>